<link rel="stylesheet" href="/css/signup.css">
<form action="/users/signup" method="POST">
    <div class="sesion-login">
        <h1>Registrarse</h1>
        <hr/>
        <h3>Bienvenido a confortHouse</h3>
        <p><input type="text" name="name" placeholder="Nombre" value="{{name}}"></p>
        <p><input type="text" name="lastname" placeholder="Apellidos" value="{{lastname}}"></p>
        <p><input type="email" name="email" placeholder="Email" value="{{email}}"></p>
        <p><input type="password" name="password" placeholder="Contraseña"></p>
        <p><input type="password" name="confirm_password" placeholder="Confirmar contraseña"></p>

        <p><button>Registrarse</button></p>
    </div>
</form>




